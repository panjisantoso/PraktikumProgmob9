<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_document_cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:elevation="3dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_document_image"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_document_nama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="TextView"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintEnd_toStartOf="@+id/item_document_delete"
                app:layout_constraintStart_toEndOf="@+id/item_document_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_document_deskripsi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:maxLines="3"
                android:text="TextView"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintBottom_toTopOf="@+id/item_document_dislike"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_document_nama"
                app:layout_constraintTop_toBottomOf="@+id/item_document_nama" />

            <ImageView
                android:id="@+id/item_document_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_delete_gray"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/item_document_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_like_nonaktif"
                app:layout_constraintBottom_toTopOf="@+id/item_document_dislikeTxt"
                app:layout_constraintEnd_toStartOf="@+id/item_document_dislike"
                app:layout_constraintStart_toEndOf="@+id/item_document_image" />

            <TextView
                android:id="@+id/item_document_likeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Like"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/item_document_like"
                app:layout_constraintStart_toStartOf="@+id/item_document_like" />

            <ImageView
                android:id="@+id/item_document_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_dislike_nonaktif"
                app:layout_constraintBottom_toTopOf="@+id/item_document_dislikeTxt"
                app:layout_constraintEnd_toStartOf="@+id/item_document_offline"
                app:layout_constraintStart_toEndOf="@+id/item_document_like" />

            <TextView
                android:id="@+id/item_document_dislikeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Dislike"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/item_document_dislike"
                app:layout_constraintStart_toStartOf="@+id/item_document_dislike" />

            <ImageView
                android:id="@+id/item_document_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_download"
                app:layout_constraintBottom_toTopOf="@+id/item_document_offlineTxt"
                app:layout_constraintEnd_toStartOf="@+id/item_document_read"
                app:layout_constraintStart_toEndOf="@+id/item_document_dislike" />

            <TextView
                android:id="@+id/item_document_readTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Read"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/item_document_read"
                app:layout_constraintStart_toStartOf="@+id/item_document_read" />

            <ImageView
                android:id="@+id/item_document_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_read"
                app:layout_constraintBottom_toTopOf="@+id/item_document_readTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_document_offline" />

            <TextView
                android:id="@+id/item_document_offlineTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Offline"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/item_document_offline"
                app:layout_constraintStart_toStartOf="@+id/item_document_offline" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>